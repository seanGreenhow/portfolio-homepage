{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "lib": [ "es2015", "es2016", "es2017", "es2018", "dom" ],
        "module": "commonjs",
        "outDir": "./build",
        "downlevelIteration": true,
        "jsx": "react",
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}